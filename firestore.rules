rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Users can manage their own verifications and activity logs
      match /verifications/{verificationId} {
        allow read, write, create, delete: if request.auth.uid == userId;
      }
      match /activity_logs/{activityLogId} {
        allow read, write, create, delete: if request.auth.uid == userId;
      }
    }

    // Golden templates are readable by any authenticated user, but only writable by admins
    match /golden_templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'admin';
    }

    // Admin roles collection
    match /roles_admin/{userId} {
      allow read, write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
