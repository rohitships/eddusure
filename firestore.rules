rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Golden templates are public and can be read by anyone.
    // This is required for the server-side AI agent to fetch template data.
    match /golden_templates/{templateId} {
      allow read: if true;
      allow write: if false; // Nobody can write to this collection directly, it must be seeded.
    }

    // Users can only manage their own documents.
    // This rule is recursive and protects all subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
